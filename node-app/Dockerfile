# Используем базовый образ Node.js
FROM node:latest

# Устанавливаем рабочую директорию внутри контейнера
WORKDIR /app

# Копируем файлы из папки node-app внутрь контейнера
# COPY node-app/package.json .  # Закомментируйте или удалите эту строку
# COPY node-app/index.js .      # Закомментируйте или удалите эту строку

# Устанавливаем зависимости Node.js
RUN npm install

# Определяем команду для запуска приложения
CMD ["node", "index.js"]
